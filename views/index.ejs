            <div class="pricing-tier" style="color: var(--accent);">Plus</div>
            <div class="pricing-price">$9.99<span>/mo</span></div>
            <p class="pricing-desc">For daily life management</p>
            <ul class="pricing-features">
              <li><i class="bi bi-check-circle-fill"></i> Unlimited Appointments</li>
              <li><i class="bi bi-check-circle-fill"></i> Unlimited Medications</li>
              <li><i class="bi bi-check-circle-fill"></i> Unlimited Contacts</li>
              <li><i class="bi bi-check-circle-fill"></i> SMS Reminders</li>
              <li><i class="bi bi-check-circle-fill"></i> Caregiver Access</li>
              <li><i class="bi bi-check-circle-fill"></i> Priority Support</li>
            </ul>
            <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/register?plan=plus" class="btn btn-pricing btn-pricing-primary">Start Free Trial</a>
          </div>
        </div>
        <!-- Family Plan -->
        <div class="col-lg-4 col-md-6">
          <div class="pricing-card">
            <div class="pricing-tier" style="color: #0ea5e9;">Family</div>
            <div class="pricing-price">$24.99<span>/mo</span></div>
            <p class="pricing-desc">For the whole family</p>
            <ul class="pricing-features">
              <li><i class="bi bi-check-circle-fill"></i> Everything in Plus</li>
              <li><i class="bi bi-check-circle-fill"></i> Up to 5 Family Members</li>
              <li><i class="bi bi-check-circle-fill"></i> Shared Calendars</li>
              <li><i class="bi bi-check-circle-fill"></i> Emergency Alerts</li>
              <li><i class="bi bi-check-circle-fill"></i> Health Reports</li>
