<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In - Boomer AI</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #1a3d2e 0%, #2d5a3d 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      font-size: 1.1rem;
    }
    .auth-card {
      background: white;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.3);
      overflow: hidden;
      max-width: 450px;
      width: 100%;
    }
    .auth-header {
      background: #2d5a3d;
      color: white;
      padding: 2.5rem 2rem;
      text-align: center;
    }
    .auth-header h1 {
      font-size: 1.75rem;
      margin-bottom: 0.5rem;
    }
    .auth-body {
      padding: 2.5rem 2rem;
    }
    .form-control {
      font-size: 1.1rem;
      padding: 0.75rem 1rem;
      border-radius: 10px;
    }
    .form-label {
      font-weight: 500;
      font-size: 1.1rem;
    }
    .input-group-text {
      border-radius: 10px 0 0 10px;
      font-size: 1.2rem;
    }
    .input-group .form-control {
      border-radius: 0 10px 10px 0;
    }
    .password-toggle {
      position: absolute;
      right: 15px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 10;
      color: #6c757d;
      font-size: 1.2rem;
    }
    .btn-primary {
      background: #2d5a3d;
      border-color: #2d5a3d;
      font-size: 1.2rem;
      padding: 0.75rem;
      border-radius: 10px;
    }
    .btn-primary:hover {
      background: #1a3d2e;
      border-color: #1a3d2e;
    }
    .alert {
      font-size: 1rem;
      border-radius: 10px;
    }
    a {
      color: #2d5a3d;
      font-weight: 500;
    }
    a:hover {
      color: #1a3d2e;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-5">
        <div class="auth-card mx-auto">
          <div class="auth-header">
            <i class="bi bi-heart-pulse fs-1 mb-2 d-block"></i>
            <h1>Boomer AI</h1>
            <p class="mb-0 opacity-75">Sign in to your assistant</p>
          </div>

          <div class="auth-body">
            <!-- Messages -->
            <% if (typeof message !== 'undefined' && message === 'logged_out') { %>
            <div class="alert alert-info alert-dismissible fade show" role="alert">
              <i class="bi bi-info-circle me-2"></i>You have been signed out.
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <i class="bi bi-exclamation-triangle me-2"></i><%= error %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
            <% } %>

            <form action="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/login" method="POST">
              <!-- Email -->
              <div class="mb-4">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                  <input type="email" class="form-control" id="email" name="email"
                         placeholder="you@example.com" required autofocus>
                </div>
              </div>

              <!-- Password -->
              <div class="mb-4">
                <label for="password" class="form-label">Password</label>
                <div class="input-group position-relative">
                  <span class="input-group-text"><i class="bi bi-lock"></i></span>
                  <input type="password" class="form-control" id="password" name="password"
                         placeholder="Enter your password" required>
                  <span class="password-toggle" onclick="togglePassword()">
                    <i class="bi bi-eye" id="passwordToggleIcon"></i>
                  </span>
                </div>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-primary w-100 mb-4">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
              </button>
            </form>

            <!-- Register Link -->
            <div class="text-center">
              <span class="text-muted">Don't have an account?</span><br>
              <a href="<%= typeof basePath !== 'undefined' ? basePath : '' %>/auth/register" class="fs-5">Create Account</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function togglePassword() {
      const field = document.getElementById('password');
      const icon = document.getElementById('passwordToggleIcon');
      if (field.type === 'password') {
        field.type = 'text';
        icon.classList.replace('bi-eye', 'bi-eye-slash');
      } else {
        field.type = 'password';
        icon.classList.replace('bi-eye-slash', 'bi-eye');
      }
    }
  </script>
</body>
</html>
